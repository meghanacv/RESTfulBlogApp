<%- include("partials/header") %>

<div class="ui main text container segment" id="blogs">
    <div class="ui huge header" id="rest">New Blog</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="image">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" ></textarea>
		</div>
		<input class="ui inverted secondary button" type="submit">
	</form>
</div>


<%- include("partials/footer") %>
